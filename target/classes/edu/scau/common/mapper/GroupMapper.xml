<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.scau.common.mapper.GroupMapper">
    <insert id="insertGroups"  parameterType="edu.scau.common.pojo.group" useGeneratedKeys="true" keyProperty="id">
        insert into `group`(activity_id, user_id, text, publish_time)
        values (#{activityId},#{userId},#{text},#{publishTime})
    </insert>
    <select id="getGroups" resultType="edu.scau.common.pojo.group" parameterType="int">
        select * from `group`
        where activity_id=#{activityId}
    </select>
    <select id="getGroup" resultType="edu.scau.common.pojo.group" parameterType="int">
        select * from `group`
        where id=#{id}
    </select>
</mapper>